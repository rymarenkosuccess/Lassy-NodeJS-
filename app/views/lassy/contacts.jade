  include ../includes/head
  body
    .citycover
      include ../includes/header
      .citycover-content.citycover-print
       .container.container-activate-gap
        .row
         div
          h1.bira-font.page-title Setting up a new Lassy
          - if(typeof(err) == 'string' ){
            div.alert.alert-danger.signup-error
             ul
               li.error #{err}
          - }
        .row.map_section
         div
          .bbox
           div#contacts-app
             form.contacts-form
              span In addition to yourself, who else should be notified when your child goes off route.
              ul.contact-header
                li
                  span.contact-name.show Name:
                  span.contact-num.show Mobile Number:
                  span.contact-btn.show
              ul.contact-list
              ul.contact-footer
                li
                  input.contact-name(name="name", value="", type="text", placeholder="Type name here...")
                  input.contact-num(name="mobile", value="", type="text", placeholder="Type Mobile Number...")
                  input.btn.btn-primary.new-contact(type="button", value="Save & Add New Contact")
              div
                a.btn.btn-warning.btn-large(href="/lassy/device/#{id}") Next
      include ../includes/footer

